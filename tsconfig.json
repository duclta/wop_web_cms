{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/*", "src/declaration.d.ts"]
}
